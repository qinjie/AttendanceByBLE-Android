                <!--android:clickable="true"-->
                <!--android:text="Sign Out"-->

                <!--android:textColor="@color/md_black_1000"-->
                <!--android:textSize="23sp" />-->
<!--&gt;>>>>>> refs/remotes/origin/miya-->
        </RelativeLayout>
    </ScrollView>

</FrameLayout>
