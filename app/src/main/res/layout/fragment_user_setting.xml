<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="edu.np.ece.attendancetakingapplication.Fragment.UserSettingFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/header_cover_image"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="200dp"
                android:src="@drawable/np_logo" />

            <!--<ImageButton-->
                <!--android:id="@+id/user_profile_photo"-->
                <!--android:layout_width="120dp"-->
                <!--android:layout_height="120dp"-->
                <!--android:layout_below="@+id/header_cover_image"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_marginTop="-60dp"-->
                <!--android:background="@drawable/profile_circular_border_imageview"-->
                <!--android:elevation="5dp"-->
                <!--android:padding="20dp"-->
                <!--android:scaleType="center"-->
                <!--android:src="@drawable/profile" />-->

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-60dp"
                android:elevation="5dp"
                android:src="@drawable/profile"
                >
            </de.hdodenhof.circleimageview.CircleImageView>


            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_cover_image"
                android:background="#ebca0707"
                android:elevation="4dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/user_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="76dp"
                    android:text="Anonymous"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_profile_short_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_profile_name"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:text="Anonymous"
                    android:textColor="@color/md_blue_100"
                    android:textSize="16sp" />

                <!--<Switch-->
                    <!--android:layout_below="@id/user_profile_short_bio"-->
                    <!--android:layout_width="100dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textOff="adasd"-->
                    <!--android:textOn="ccc"-->
                    <!--android:showText="true"-->
                    <!--/>-->

                <ToggleButton
                    android:id="@+id/btnActivateBeacon"
                    android:layout_below="@id/user_profile_short_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/toggle_selector"
                    android:textColor="@color/white"
                    android:textOff="Beacon Off"
                    android:textOn="Beacon On"
                    android:textAllCaps="false"
                    android:layout_marginTop="8dp"
                    android:elevation="10dp"
                    />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btn_change_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:text="Change Password" />

                <TextView
                    android:id="@+id/btn_signout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:text="Sign Out" />
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>
